@page
@model Dictionaire_contacts.Pages.Clients.IndexModel
@{
}
<style>
    body {
        background-color: #e2f8fe; 

    .circular-img {
        border-radius: 50%;
    }

    .logout-btn {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>

<a class="btn btn-dark logout-btn" href="/">Logout</a>

<br>
<h2>Mes Contacts</h2>
<a class='btn btn-info btn-sm' href='/Clients/Create'>New Contact</a>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Description</th>
            <th>Date de création</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListContacts)
        {
            <tr>
                <td><img src="@item.ImagePath" alt="Contact Image" width="100" class="circular-img" /></td>

                <td>@item.Name</td>
                <td>@item.Telephone</td>
                <td>@item.Descr</td>
                <td>@item.Creedate</td>

                <td>
                    <a class="btn btn-warning btn-sm" href="/Clients/Edit?id=@item.Id">Edit</a>
                    <button class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    function confirmDelete(id) {
        if (confirm("Êtes-vous sûr de vouloir supprimer cet enregistrement ?")) {
            window.location.href = '/Clients/Delete?id=' + id;
        }
    }
</script>
