@page
@model Dictionaire_contacts.Pages.Clients.EditModel

<style>
    body {
        background-color: #e2f8fe;
</style>

<br>
<h2>Edit Client</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Le choix de l'image est important pour affecter les modifications. Si vous ne voulez pas modifier, vous pouvez rechoisir votre image actuelle.</strong>
            </div>
        </div>
    </div>
}

<form method="POST" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.contact.Id" />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Name" value="@Model.contact.Name">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Telephone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Telephone" value="@Model.contact.Telephone">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Description" value="@Model.contact.Descr">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Image</label>
        <div class="col-sm-6">
            <input type="file" class="form-control" name="uploadedImage" value="@Model.contact.ImagePath">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Clients" role="button">Cancel</a>
        </div>
    </div>
</form>
